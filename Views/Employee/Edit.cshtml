@model Grocery.ViewModels.EmployeeVM.EmployeeCRUDVM
@{
    ViewData["Title"] = "Edit Employee";
}

<h1>Edit Employee</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeId" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MiddleName" class="control-label"></label>
                <input asp-for="MiddleName" class="form-control" />
                <span asp-validation-for="MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genders" class="control-label"></label>
                <select asp-for="GenderId" class="control-label" asp-items="Model.Genders">
                    <option value="">Pick gender</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateHired" class="control-label"></label>
                <input asp-for="DateHired" class="form-control" />
                <span asp-validation-for="DateHired" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateResigned" class="control-label"></label>
                <input asp-for="DateResigned" class="form-control" />
                <span asp-validation-for="DateResigned" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CurrentlyEmployed" /> @Html.DisplayNameFor(model => model.CurrentlyEmployed)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CivilStatuses" class="control-label"></label>
                <select asp-for="CivilStatusId" class="control-label" asp-items="Model.CivilStatuses">
                    <option value="">Pick civil status</option>
                </select>
 <!--              <label asp-for="CivilStatusId" class="control-label"></label>
                <select asp-for="CivilStatusId" class="form-control" asp-items="ViewBag.CivilStatusId"></select>
                <span asp-validation-for="CivilStatusId" class="text-danger"></span>
                          -->
            </div>
            <div class="form-group">
                <label asp-for="Positions" class="control-label"></label>
                <select asp-for="PositionId" class="control-label" asp-items="Model.Positions">
                    <option value="">Pick position</option>
                </select>
 <!--           <label asp-for="PositionId" class="control-label"></label>
                <select asp-for="PositionId" class="form-control" asp-items="ViewBag.PositionId"></select>
                <span asp-validation-for="PositionId" class="text-danger"></span>-->
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
